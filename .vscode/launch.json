  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}"
    },
    {
      "name": "Scan local bundle (incognito)",
      "type": "go",
      "request": "launch",
      "program": "${workspaceRoot}/apps/cnspec/cnspec.go",
      "cwd": "${workspaceRoot}/",
      "args": [
        "scan",
        "local",
        "--incognito",
        "-f",
        "policy/examples/example.yaml"
      ]
    },
    {
      "name": "Scan k8s bundle (incognito)",
      "type": "go",
      "request": "launch",
      "program": "${workspaceRoot}/apps/cnspec/cnspec.go",
      "cwd": "${workspaceRoot}/",
      "args": [
        "scan",
        "k8s",
        "--discover",
        "pods",
        "--namespace",
        "test-vanish",
        "--incognito",
        "--verbose"
      ]
    },
    {
      "name": "Scan local (incognito)",
      "type": "go",
      "request": "launch",
      "program": "${workspaceRoot}/apps/cnspec/cnspec.go",
